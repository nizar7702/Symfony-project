{% extends 'base.html.twig' %}

{% block title %}List produits
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		img{width:120px; height: 100px}
	</style>
	<h1>Liste de produits</h1>
	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Libellé</th>
				<th scope="col">Image</th>
				<th scope="col">description</th>
				<th scope="col">prix unitaire</th>
                <th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row">{{product.lib}}</th>
				<td><img src={{product.im}} alt=""></td>
				<td>{{product.description}}</td>
				<td>{{product.pru}}</td>
				<td>
					<a href="{{path('delete',{'id':product.id()})}}" class="btn btn-danger">supprimer</a>
					<a href="{{path('edit',{'id':product.id()})}}" class="btn btn-primary">mettre à jour</a>
                    <a href="" class="btn btn-success">ajout à panier</a>
				</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
